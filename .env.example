# Symfony Environment
APP_ENV=dev
APP_SECRET=your-secret-key-here

# Baselinker API Configuration
BL_API_URL=https://api.baselinker.com/connector.php
BL_API_TOKEN=your_baselinker_token_here

# Database Configuration
DATABASE_URL="postgresql://baselinker:baselinker@database:5432/baselinker?serverVersion=16&charset=utf8"

# Messenger Queue Configuration
# Use 'sync://' for synchronous processing (development)
# Use 'doctrine://default?auto_setup=0' for async processing (production)
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# Redis Configuration (for Prometheus metrics storage)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Graylog Configuration (centralized logging)
GRAYLOG_HOST=graylog
GRAYLOG_PORT=12201

# Default values for optional variables
redis_default_host=localhost
redis_default_port=6379
graylog_default_port=12201

